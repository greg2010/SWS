{% extends "base.twig" %}

{% block title %}Standings{% endblock %}

{% block content %}
    {% if errorMsg is defined %}
        {% set isErrorHidden = "" %}
    {% else %}
        {% set isErrorHidden = "hidden" %}
    {% endif %}
    <div id="formSettings">         
        <div class="alert alert-danger" role="alert" {{isErrorHidden}}>
            {{errorMsg}}
        </div>
        <h1>Standings Page</h1>
        
        {% set i = 0 %}
        
        {% for alliance, types in standings %}
            <a data-toggle="collapse" href="#alliance{{ i }}" aria-expanded="false" aria-controls="collapseStandingsAlliance"><h2><center>{{ alliance }}</center></h2></a>
            <div class="collapse in" id="alliance{{ i }}">
                <table class="table table-condensed" style="width: 99%; margin: 0 auto; margin-left: 5px;">
                    <tbody>
                        <tr>
                            <td>
                                <table>
                                    <tr>
                                        <td width = "25%" style="color: #f6c000;">ALLIANCES</td>
                                        <td width = "5%" style="color: #f6c000;"><center>STAND</center></td>
                                    </tr>
                                </table>
                            </td>
                            <td>
                                <table>
                                    <tr>
                                        <td width = "25%" style="color: #f6c000;">CORPORATIONS</td>
                                        <td width = "5%" style="color: #f6c000;"><center>STAND</center></td>
                                </table>
                            </td> 
                            <td>
                                <table>
                                    <tr>
                                        <td width = "25%" style="color: #f6c000;">CHARACTERS</td>
                                        <td width = "5%" style="color: #f6c000;"><center>STAND</center></td>
                                    </tr>
                                </table>
                            </td> 
                        </tr> 
                        <tr>
                            <td>
                                <table>
                                {% for allianceName,standing in types.alliance %}
                                    <tr>
                                        <td width = "25%" title="{{standing.actualStanding}}">{{ allianceName }}</td>
                                        <td width = "5%" title="{{standing.actualStanding}}" align="right" style="padding-right: 5%;">{{standing.actualStanding}} <img src="images/{{standing.picStanding}}.png"></td>
                                    </tr>
                                {% endfor %}
                                </table>
                            </td>
                            <td>
                                <table>
                                    {% for corpName,standing in types.corp %}
                                    <tr>
                                        <td width = "25%" title="{{standing.actualStanding}}">{{ corpName }}</td>
                                        <td width = "5%" title="{{standing.actualStanding}}" align="right" style="padding-right: 5%;">{{standing.actualStanding}} <img src="images/{{standing.picStanding}}.png"></td>
                                    </tr>
                                    {% endfor %}
                                </table>
                            </td> 
                            <td>
                                <table>
                                    {% for charName,standing in types.char %}
                                    <tr>
                                        <td width = "25%" title="{{standing.actualStanding}}">{{ charName }}</td>
                                        <td width = "5%" title="{{standing.actualStanding}}" align="right" style="padding-right: 5%;">{{standing.actualStanding}} <img src="images/{{standing.picStanding}}.png"></td>
                                    </tr>
                                    {% endfor %}
                                </table>
                            </td> 
                        </tr> 
                    </tbody>
                </table>
            </div>
            {% set i = i + 1 %}
        {% endfor %}
        </div>
{% endblock %}